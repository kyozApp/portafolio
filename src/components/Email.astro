<section class="contact-section">
    <article class="contact-article">
        <h2>✉️ Email</h2>
        <section class="email-container">
            <section class="copy-message" id="copy-message">
                <p>Correo copiado</p>
            </section>
            <section class="email-info">
                <h3 id="email-address" class="email-address">
                    kyoz.dev@proton.me
                </h3>
                <button class="copy-button">Copiar</button>
            </section>
        </section>
    </article>
</section>

<script>
    const button_copiar: NodeListOf<HTMLButtonElement> =
        document.querySelectorAll<HTMLButtonElement>(".copy-button");

    function copiar_al_portapapeles() {
        const emailElement = document.getElementById(
            "email-address",
        ) as HTMLElement | null;
        if (emailElement) {
            const email = emailElement.innerText;
            navigator.clipboard
                .writeText(email)
                .then(() => {
                    const mensajeElement = document.getElementById(
                        "copy-message",
                    ) as HTMLElement | null;
                    if (mensajeElement) {
                        mensajeElement.style.display = "flex";
                        setTimeout(() => {
                            mensajeElement.style.display = "none";
                        }, 1000);
                    }
                })
                .catch((error) => {
                    console.error("Error copying to clipboard: ", error);
                });
        } else {
            console.error("Email element not found");
        }
    }

    button_copiar.forEach((button: HTMLButtonElement) => {
        button.addEventListener("click", () => {
            copiar_al_portapapeles();
        });
    });
</script>

